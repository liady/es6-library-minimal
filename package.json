{
  "name": "es6-library-minimal",
  "version": "0.3.0",
  "description": "ES6 Universal Library Starter",
  "main": "./index.js",
  "scripts": {
    "prepublish": "npm run build-all",
    "preversion": "npm run build-all && npm run unit",
    "version": "git add .",
    "postversion": "git push && git push --tags",
    "build": "gulp build",
    "build-web": "gulp build-web",
    "build-web-dev": "gulp build-web-dev",
    "build-all": "gulp",
    "unit": "mocha --compilers js:babel-core/register --colors ./test/*.spec.js",
    "unit-watch": "mocha --compilers js:babel-core/register --colors -w ./test/*.spec.js",
    "test": "npm run unit-watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/liady/es6-library-minimal.git"
  },
  "keywords": [
    "es6",
    "npm",
    "starter",
    "library",
    "boilerplate",
    "babel",
    "umd",
    "webpack",
    "universal"
  ],
  "author": {
    "name": "Liad Yosef",
    "url": "https://github.com/liady"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liady/es6-library-minimal/issues"
  },
  "files": [
    "LICENSE",
    "README.md",
    "index.js",
    "lib",
    "dist"
  ],
  "homepage": "https://github.com/liady/es6-library-minimal",
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-core": "^6.4.0",
    "babel-eslint": "^5.0.0-beta6",
    "babel-loader": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.3.13",
    "chai": "^3.4.1",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^4.0.0",
    "eslint-loader": "^1.2.0",
    "eslint-plugin-react": "^3.16.1",
    "eslint-plugin-standard": "^1.3.1",
    "gulp": "^3.9.0",
    "gulp-babel": "^6.1.1",
    "gulp-env": "^0.2.0",
    "gulp-eslint": "^1.1.1",
    "gulp-load-plugins": "^1.2.0",
    "gulp-util": "^3.0.6",
    "mocha": "^2.3.4",
    "webpack": "^1.12.11"
  },
  "library": {
    "name": "library",
    "entry": "library.js"
  }
}
